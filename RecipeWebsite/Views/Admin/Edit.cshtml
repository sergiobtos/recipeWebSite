@model Recipe
@{
    ViewBag.Title = "Edit Recipe";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="RecipeId" />
    <div class="form-group">
        <label asp-for="RecipeName"></label>
        <div><span asp-validation-for="RecipeName" class="text-danger"></span></div>
        <input asp-for="RecipeName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <div><span asp-validation-for="Ingredients" class="text-danger"></span></div>
        <input asp-for="Ingredients" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="RecipeInstructions"></label>
        <div><span asp-validation-for="RecipeInstructions" class="text-danger"></span></div>
        <input asp-for="RecipeInstructions" class="form-control" />
    </div> 
    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

