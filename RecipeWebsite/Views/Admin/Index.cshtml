@model IEnumerable<Recipe>
@{
    ViewBag.Title = "Recipes";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">Recipe Name</th>
        <th class="text-center">Actions</th>
    </tr>
    @foreach (var rec in Model)
    {
        <tr>
            <td class="text-left">@rec.RecipeName</td>
            <td class="text-center">
                <form asp-action="Delete" asp-controller="Admin" method="post">
                    <input type="hidden" name="RecipeId" value="@rec.RecipeId" />
                    <a asp-action="Edit" asp-route-recipeId="@rec.RecipeId" class="btn btn-sm btn-warning">Edit</a>
                    <button type="submit"  class="btn btn-danger btn-sm">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Add Product</a>
</div>