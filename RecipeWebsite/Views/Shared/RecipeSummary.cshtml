@model Recipe

<div asp-validation-summary="All"></div>
<div class="form-group row">
    <label asp-for="RecipeName" class="col-sm-2 col-form-label">Recipe's name: </label>
    <div class="col-sm-10">
        <input asp-for="RecipeName" class="form-control" placeholder="RecipeName"/>
        <span asp-validation-for="RecipeName"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="Ingredients" class="col-sm-2 col-form-label" >Ingredients: </label>
    <div class="col-sm-10">
        <textarea asp-for="Ingredients" class="form-control" placeholder="Ingredients" rows="6" cols="50"></textarea>
        <span asp-validation-for="Ingredients"></span>
    </div>
</div>
<div class="form-group row">
    <label asp-for="RecipeInstructions" class="col-sm-2 col-form-label">Recipe's instructions: </label>
    <div class="col-sm-10">
        <textarea asp-for="RecipeInstructions" class="form-control" placeholder="RecipeInstructions" rows="6" cols="50"></textarea>
        <span asp-validation-for="RecipeInstructions"></span>
    </div>
</div>
<div class="text-center">
    <button class="btn btn-secondary" type="submit" asp-controller="Recipe" asp-action="AddRecipe">Submit Recipe</button>
    <button class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</button>
</div>

